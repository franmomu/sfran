{% extends 'FranPostBundle:Taxonomy:base_taxonomy.html.twig' %}

{% block title 'Taxonomy list' %}

{% block body %}
<h1>Taxonomy list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('taxonomy_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.namedtype }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('taxonomy_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('taxonomy_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('taxonomy_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}