    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>{% block title %}Welcome!{% endblock %} | sfran</title>
        <meta name="description" content="">
        <meta name="author" content="">

        <meta name="viewport" content="width=device-width">

        <style>
        body {
          padding-top: 60px;
          padding-bottom: 40px;
        }
        </style>
        {% stylesheets
            '@FranHomeBundle/Resources/public/css/bootstrap.min.css'
            '@FranHomeBundle/Resources/public/css/bootstrap-responsive.min.css'
            '@FranHomeBundle/Resources/public/css/style.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->        
        <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </a>
              <a class="brand" href="{{ path('home') }}">sfran</a>
              <div class="nav-collapse">
                {% block navbar %}
                    {% include 'FranHomeBundle::navbar.html.twig' with {'section': 'home'} %}
                {% endblock %}
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>

        <div class="container">
            {% block body %}{% endblock %}
          <hr>

          <footer>
            <p>&copy; sfran 2012</p>
          </footer>

        </div> <!-- /container -->
    {% javascripts
        '@FranHomeBundle/Resources/public/js/libs/*'
        '@FranHomeBundle/Resources/public/js/script.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% block javascripts %}{% endblock %}
    </body>
